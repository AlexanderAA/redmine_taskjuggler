
<FORM action="/taskjuggler/timetable">
User : <SELECT NAME="user_id">
<%
@users.each do |user|
%>
<OPTION VALUE="<%= user.id%>" <%
if user.id == @current_user_id
%> SELECTED <%
end
%>><%=user.name%></OPTION>
<%
end
%>
</SELECT>
 Date : <input type="text" name="date" value="<%= @current_date %>">
 <input type="submit" value="Changer date et/ou personne">
</FORM>
<HR/>
<FORM ACTION="/taskjuggler/timetable_update">
<input type ="hidden" name="date" value="<%= @current_date %>"/>
<input type ="hidden" name="user_id" value="<%= @current_user_id%>"/>
<INPUT TYPE="SUBMIT" value="Saisir la charge de travail"/> [ TOTAL : <%= @hours_total / 8 %> / 1 jour enregistr√© pour ce jour ]
<table>
<tr>
<td valign="top">

<H2>Logged Issues ce jour</H2>
<% 
if @logged_issues
@logged_issues.each do |issue_id,issue|
	%>
<%= 
		render :file  => File.join(File.dirname(__FILE__), 'inc_timetable_task.html.erb'), :locals => { :issue => issue } %>
<BR/>
<%
end
end
%>
<H2>Assigned Issues</H2>
<% @assigned_issues.each do |issue_id,issue|
	%>
<%= 
		render :file  => File.join(File.dirname(__FILE__), 'inc_timetable_task.html.erb'), :locals => { :issue => issue } %>
<BR/>
	<%
end
%>
</td>
<td valign="top">
<H2>Watched Issues</H2>
<% @watched_issues.each do |issue_id,issue|
	%>
<%= 
		render :file  => File.join(File.dirname(__FILE__), 'inc_timetable_task.html.erb'), :locals => { :issue => issue } %><BR/>
	<%
end
%>
</td>
</tr>
</table>
